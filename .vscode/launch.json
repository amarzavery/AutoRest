{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "run tests",
      "program": "${workspaceRoot}/src/autorest-core/node_modules/mocha/bin/_mocha",
      "args": [
        "test",
        "-g",
        "TestConfiguration"
      ],
      "cwd": "${workspaceRoot}/src/autorest-core"

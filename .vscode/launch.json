      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "debug node test",
      "program": "${workspaceRoot}/src/generator/AutoRest.NodeJS.Tests/AcceptanceTests/debugTestHelper.js",
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "debug node azure test",
      "program": "${workspaceRoot}/src/generator/AutoRest.NodeJS.Azure.Tests/AcceptanceTests/debugTestHelper.js",
      "cwd": "${workspaceRoot}"
    }
  ]
